---
import Layout from '../layouts/Layout.astro';
---
<Layout title="404: Not Found" description="Page not found">
  <div class="min-h-screen flex flex-col items-center justify-center bg-primary text-secondary">
    <h1 class="text-4xl font-bold mb-4">404: Page Not Found</h1>
    <p class="mb-8">Oops! The page you're looking for doesn't exist.</p>
    <a href="/" class="bg-accent text-dark px-6 py-2 rounded-md font-bold hover:bg-opacity-90">
      Go Back Home
    </a>
  </div>
</Layout>