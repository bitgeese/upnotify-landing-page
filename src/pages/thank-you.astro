---
import Layout from '../layouts/Layout.astro';

const title = "Thank You for Signing Up | UpNotify";
const description = "Thank you for your interest in UpNotify. We've received your submission and will keep you updated on our launch.";
---

<Layout title={title} description={description}>
  <div class="min-h-screen flex flex-col bg-primary text-secondary font-sans">
    <header class="bg-dark py-4 px-6 flex justify-between items-center border-b-4 border-accent">
      <div class="flex items-center space-x-2">
        <a href="/" class="font-bold text-3xl text-accent transform -rotate-2">UpNotify</a>
      </div>
    </header>

    <main class="flex-grow container mx-auto px-4 py-12 relative">
      <div class="absolute top-0 left-0 w-20 h-20 bg-accent rounded-full opacity-50 -z-10 transform translate-x-8 translate-y-8"></div>
      <div class="absolute bottom-0 right-0 w-32 h-32 bg-accent opacity-50 -z-10 transform -translate-x-12 -translate-y-12 rotate-12"></div>
      
      <section class="max-w-2xl mx-auto text-center">
        <div class="bg-primary p-8 border-4 border-dark rounded-lg transform rotate-1 hover:rotate-0 transition-transform">
          <h1 class="text-4xl font-black text-dark mb-6 leading-tight">
            Thank You for Signing Up!
          </h1>
          <p class="text-xl mb-8">
            We've received your submission and we're excited to have you on board. We'll keep you updated on our launch and any important news about UpNotify.
          </p>
          <div class="mb-8">
            <svg class="w-24 h-24 mx-auto text-accent" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <a href="/" class="inline-block bg-accent hover:bg-opacity-90 text-dark font-black py-3 px-8 rounded-md text-lg transition-all shadow-[4px_4px_0px_0px_rgba(1,17,9,1)] hover:shadow-[2px_2px_0px_0px_rgba(1,17,9,1)] hover:translate-x-[2px] hover:translate-y-[2px] border-2 border-dark">
            Back to Home
          </a>
        </div>
      </section>
    </main>

    <footer class="bg-dark py-8 mt-auto border-t-4 border-accent">
      <div class="container mx-auto px-4 text-center text-primary">
        <p class="font-bold">&copy; 2024 UpNotify. All rights reserved.</p>
        <p class="mt-2 font-medium">Empowering freelancers with advanced Upwork job notifications.</p>
      </div>
    </footer>
  </div>
</Layout>