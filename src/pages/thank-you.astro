---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';

const title = "Thank You for Signing Up | UpNotify";
const description = "Thank you for your interest in UpNotify. We've received your submission and will keep you updated on our launch.";
---
<Layout title={title} description={description}>
	<div class="">
	  <NavBar/>
	  <main>
        
      <section class="my-24 max-w-2xl mx-auto text-center">
        <div class="bg-primary p-8 border-8 border-dark rounded-lg shadow-gold-lg transform rotate-1 hover:rotate-0 transition-transform">
          <h1 class="text-4xl font-black text-dark mb-6 leading-tight">
            Thank You for Signing Up!
          </h1>
          <p class="text-lg font-mono mb-8">
            We've received your submission and we're excited to have you on board. We'll keep you updated on our launch and any important news about UpNotify.
          </p>
          <div class="mb-8">
            <svg class="w-24 h-24 mx-auto text-lime" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <Button href='/'>Back to Home</Button>
        
        </div>
      </section>
	
	  </main>
	  <Footer/>


	  
	</div>
	<script type="application/ld+json" set:html={JSON.stringify({
	  "@context": "http://schema.org",
	  "@type": "SoftwareApplication",
	  "name": "UpNotify",
	  "applicationCategory": "BusinessApplication",
	  "operatingSystem": "Web",
	  "description": "UpNotify helps freelancers find Upwork jobs faster with advanced RSS and search capabilities.",
	  "offers": {
		"@type": "Offer",
		"price": "6.00",
		"priceCurrency": "USD"
	  }
	})} />
  </Layout>

